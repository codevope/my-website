---
import ThemeToggle from "@/components/react/ThemeToggle.jsx";
import MobileMenu from "@/components/react/MobileMenu.jsx";
import navLinks from "@/config/header/navlinks.json";
import "@/styles/header.css";

const linkClasses = "flex items-center px-3 py-2 text-sm dark:text-gray-50 text-gray-600 font-medium rounded-lg transition-all duration-300 hover:bg-gray-200 dark:hover:bg-gray-700 group";
---

<header
  class="bg-gradient-to-br from-white to-gray-100 dark:from-gray-900 dark:to-gray-800 border-b border-gray-200 dark:border-gray-700 backdrop-blur-sm fixed w-full top-0 z-50 animate-slideInRight"
>
  <div class="container mx-auto flex justify-between items-center px-4 py-3">
    <a href="/" class="flex items-center space-x-2 group">
      <span
        class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#122ba7] to-[#05186c]  dark:from-[#ffffff] dark:to-[#c1c5d5] group-hover:bg-gradient-to-r group-hover:from-[#FF8C78] group-hover:to-[#8B7CB0] transition-all duration-300 animate-shake"
      >
        Codevo
      </span>
    </a>

    <nav class="flex items-center space-x-6">
      <ul class="hidden md:flex space-x-6">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class={`${linkClasses} ${link.hoverText}`}
              >
                <span set:html={link.icon} />
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>

      <MobileMenu client:load />
      <ThemeToggle client:load />
    </nav>
  </div>
</header>
