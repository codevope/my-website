---
import Card from "@/components//astro/Card.astro";
import BaseLayout from "@/layouts/Layout.astro";
---

<BaseLayout title="Inicio">
  <!-- Hero Section -->
  <section
    class="relative bg-white dark:bg-gray-900 text-gray-500 py-20 overflow-hidden -mt-4"
  >
    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-3xl mx-auto">
        <h1
          class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in text-shadow-lg"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r dark:from-blue-200 dark:to-blue-100 from-blue-700 to-blue-900"
          >
            Codevo
          </span>
        </h1>
        <p
          class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block"
        >
          Sistema operativo optimizado para el rendimiento y la seguridad.
        </p>
        <div class="animate-fade-in delay-200">
          <a
            href="/descargas"
            class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white dark:text-blue-900 bg-gradient-to-r dark:from-blue-200 dark:to-blue-100 from-blue-900 to-blue-700 rounded-lg hover:opacity-90 transition-opacity"
          >
            Descargar
            <svg
              class="w-4 h-4 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Información -->
  <main
    class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-16 relative"
  >
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r dark:from-blue-200 dark:to-blue-100 from-blue-700 to-blue-900"
        >
          ¿Qué es Codevo?
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card
          title="Optimización"
          description="Mejor rendimiento y eficiencia."
          borderColor="border-[#294bbc]"
          gradientFrom="from-[#294bbc]"
          gradientTo="to-[#FF8C78]"
          textColor="text-[#b6c2fa]"
          hoverTextColor="hover:text-[#294bbc]"
          icon="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
        />
        <Card
          title="Desarrollo"
          description="Herramientas para desarrolladores."
          borderColor="border-[#b6c2fa]"
          gradientFrom="from-[#b6c2fa]"
          gradientTo="to-[#8B7CB0]"
          textColor="text-[#b6c2fa]"
          hoverTextColor="hover:text-[#8B7CB0]"
          icon="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
        />
        <Card
          title="Seguridad"
          description="Protección avanzada contra amenazas."
          borderColor="border-[#4CAF50]"
          gradientFrom="from-[#4CAF50]"
          gradientTo="to-[#81C784]"
          textColor="text-[#4CAF50]"
          hoverTextColor="hover:text-[#81C784]"
          icon="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        />
        <Card
          title="Compatibilidad con Xbox"
          description="Juega tus juegos favoritos de Xbox."
          borderColor="border-[#0078D4]"
          gradientFrom="from-[#0078D4]"
          gradientTo="to-[#4D9EF7]"
          textColor="text-[#0078D4]"
          hoverTextColor="hover:text-[#4D9EF7]"
          icon="M12 6v6m0 0v6m0-6h6m-6 0H6"
        />
        <Card
          title="Actualizaciones"
          description="Mantente al día con las últimas mejoras."
          borderColor="border-[#FF8C00]"
          gradientFrom="from-[#FF8C00]"
          gradientTo="to-[#FFA726]"
          textColor="text-[#FF8C00]"
          hoverTextColor="hover:text-[#FFA726]"
          icon="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
        />
        <Card
          title="Rendimiento"
          description="Máximo rendimiento en todas las tareas."
          borderColor="border-[#00B294]"
          gradientFrom="from-[#00B294]"
          gradientTo="to-[#26C6DA]"
          textColor="text-[#00B294]"
          hoverTextColor="hover:text-[#26C6DA]"
          icon="M13 10V3L4 14h7v7l9-11h-7z"
        />
        <Card
          title="Drivers"
          description="Compatibilidad con los últimos drivers."
          borderColor="border-[#8A2BE2]"
          gradientFrom="from-[#8A2BE2]"
          gradientTo="to-[#BA68C8]"
          textColor="text-[#8A2BE2]"
          hoverTextColor="hover:text-[#BA68C8]"
          icon="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
        />
        <Card
          title="Apariencia"
          description="Personaliza el aspecto de tu sistema."
          borderColor="border-[#FF4081]"
          gradientFrom="from-[#FF4081]"
          gradientTo="to-[#FF80AB]"
          textColor="text-[#FF4081]"
          hoverTextColor="hover:text-[#FF80AB]"
          icon="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
        />
        <Card
          title="Soporte"
          description="Asistencia técnica y recursos."
          borderColor="border-[#00BCD4]"
          gradientFrom="from-[#00BCD4]"
          gradientTo="to-[#4DD0E1]"
          textColor="text-[#00BCD4]"
          hoverTextColor="hover:text-[#4DD0E1]"
          icon="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </div>
    </div>
  </main>

  <!-- Sección de Características -->
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r dark:from-blue-200 dark:to-blue-100 from-blue-700 to-blue-900"
        >
          Características
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card
          title="Bajo Consumo"
          description="Optimizado para consumir menos recursos."
          borderColor="border-[#294bbc]"
          gradientFrom="from-[#294bbc]"
          gradientTo="to-[#FF8C78]"
          textColor="text-[#b6c2fa]"
          hoverTextColor="hover:text-[#294bbc]"
          icon="M13 10V3L4 14h7v7l9-11h-7z"
        />
        <Card
          title="Compatibilidad"
          description="Compatible con una amplia gama de hardware."
          borderColor="border-[#b6c2fa]"
          gradientFrom="from-[#b6c2fa]"
          gradientTo="to-[#8B7CB0]"
          textColor="text-[#b6c2fa]"
          hoverTextColor="hover:text-[#8B7CB0]"
          icon="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
        />
        <Card
          title="Seguridad"
          description="Protección avanzada contra amenazas."
          borderColor="border-[#4CAF50]"
          gradientFrom="from-[#4CAF50]"
          gradientTo="to-[#81C784]"
          textColor="text-[#4CAF50]"
          hoverTextColor="hover:text-[#81C784]"
          icon="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        />
        <Card
          title="Personalización"
          description="Personaliza el aspecto de tu sistema."
          borderColor="border-[#FFD700]"
          gradientFrom="from-[#FFD700]"
          gradientTo="to-[#FFE44D]"
          textColor="text-[#FFD700]"
          hoverTextColor="hover:text-[#FFE44D]"
          icon="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
        />
      </div>
    </div>
  </section>

  <!-- Sección Final CTA -->
  <section
    class="relative bg-gradient-to-br dark:from-gray-900 dark:to-gray-800 from-gray-50 to-gray-100 text-white py-24 overflow-hidden"
  >
    <div class="container mx-auto text-center px-4 relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-300 to-red-500"
        >
          ¡Comienza ahora!
        </span>
      </h2>
      <a
        href="/descargas"
        class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white dark:text-blue-900 bg-gradient-to-r dark:from-blue-200 dark:to-blue-100 from-blue-900 to-blue-700 rounded-lg hover:opacity-90 transition-opacity"
      >
        Descargar
        <svg
          class="w-4 h-4 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          ></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .group:hover h2 span,
  .group:hover h3 span {
    background-position: 100% 50%;
    transition: background-position 0.5s ease-out;
  }

  h2 span,
  h3 span {
    background-size: 200% auto;
    background-position: 0% 50%;
    transition: background-position 0.3s ease-in;
  }
</style>
