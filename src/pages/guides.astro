---
import SupportNotice from "@/components/astro/SupportNews.astro";
import GuideCard from "@/components/astro/GuideCard.astro";
import guides from "@/config/guides/guides.json";
import BaseLayout from "@/layouts/Layout.astro";

---

<BaseLayout title="Guías y Tutoriales">
  {/* Hero Section */}
  <div class="container mx-auto py-10 text-center relative z-10">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in [text-shadow:_0_4px_12px_rgb(0_0_0_/_30%)]">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#294bbc] to-[#b6c2fa] group-hover:bg-[200%_auto] transition-[background-position] duration-500 ease-out">
          Guías y Tutoriales
        </span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block">
        Encuentra las mejores guías y tutoriales para aprovechar al máximo CodeXtremeOS.
      </p>
    </div>
  </div>

  {/* Contenido Principal */}
  <main class="bg-gradient-to-br from-[#1A1A1A] py-16 relative">
    {/* Aviso de Apoyo a Creadores */}
    <SupportNotice />

    {/* Grid de Guías */}
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {guides.map((guide) => (
          <GuideCard {...guide} />
        ))}
      </div>
    </div>
  </main>
</BaseLayout>